<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/relativeLayout1"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true">

        <RelativeLayout
            android:id="@+id/linearLayout1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/black"
            android:orientation="vertical">



            <TextView
                android:id="@+id/textView6"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:textSize="30sp"
                android:fontFamily="@font/playfairdisplayblack"
                android:text="@string/alegeti_fimul_dorit"
                android:textColor="@color/orange" />
            <TextView
                android:id="@+id/textView5"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:textSize="20sp"
                android:layout_below="@+id/textView6"
                android:fontFamily="@font/playfairdisplayblack"
                android:text="@string/tomb_raider"
                android:textColor="@color/orange" />

            <Button
                android:id="@+id/button"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:layout_below="@+id/textView5"
                android:background="@drawable/tomb_raider" />


            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:textSize="20sp"
                android:fontFamily="@font/playfairdisplayblack"
                android:layout_below="@id/button"
                android:text="@string/avengers_infinity_war_2018_3d"
                android:textColor="@color/orange"



                />

            <Button
                android:id="@+id/button2"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:layout_below="@id/textView"
                android:background="@drawable/avengers" />

           <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:textSize="20sp"
               android:fontFamily="@font/playfairdisplayblack"
                android:layout_below="@id/button2"
                android:text="@string/jumanji_welcome_to_the_jungle_2017"
                android:textColor="@color/orange" />

            <Button
                android:id="@+id/button3"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:layout_below="@id/textView2"
                android:background="@drawable/jumanji" />
            <TextView
                android:id="@+id/textView3"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:fontFamily="@font/playfairdisplayblack"
                android:textSize="20sp"
                android:layout_below="@id/button3"
                android:text="@string/mamma_mia_here_we_go_again_2018"
                android:textColor="@color/orange" />

            <Button
                android:id="@+id/button4"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:layout_below="@id/textView3"
                android:background="@drawable/mammamia" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:fontFamily="@font/playfairdisplayblack"
                android:textSize="20sp"
                android:layout_below="@id/button4"
                android:text="@string/the_greatest_showman_2017"
                android:textColor="@color/orange" />

            <Button
                android:id="@+id/button5"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:layout_below="@id/textView4"
                android:background="@drawable/showman" />



        </RelativeLayout>
    </ScrollView>

</RelativeLayout>

